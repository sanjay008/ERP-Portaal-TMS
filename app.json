{
  "expo": {
    "name": "ERP TMS Driver",
    "slug": "erp-portaal-tms-driver",
    "version": "26.01.05",
    "jsEngine": "hermes",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "erpportaaltmsdriver",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "buildNumber": "2",
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": false,
        "ITSAppUsesNonExemptEncryption": false,
        "LSApplicationQueriesSchemes": [],
        "NSCameraUsageDescription": "ERP TMS Driver uses the camera to capture product images and scan barcodes for inventory updates.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "ERP TMS Driver uses your location to track delivery routes and verify attendance even when the app is not open.",
        "NSLocationAlwaysUsageDescription": "ERP TMS Driver uses your location to track delivery routes and verify attendance in the background.",
        "NSLocationWhenInUseUsageDescription": "ERP TMS Driver uses your location to detect your current store or workplace when the app is running.",
        "NSPhotoLibraryUsageDescription": "ERP TMS Driver uses your photo library so you can choose product images to upload."
      },
      "supportsTablet": false,
      "bundleIdentifier": "com.erptmsdriver.app",
      "privacyManifest": {
         "NSPrivacyAccessedAPITypes": []
      }
    },
    "android": {
      "allowBackup": false,
      "versionCode": 2,
      "hardwareAccelerated": true,
      "env": {
        "EXPO_ANDROID_KEYSTORE": "@EXPO_ANDROID_KEYSTORE",
        "EXPO_ANDROID_KEYSTORE_PASSWORD": "@EXPO_ANDROID_KEYSTORE_PASSWORD",
        "EXPO_ANDROID_KEYSTORE_ALIAS": "erp_tms_driver",
        "EXPO_ANDROID_KEYSTORE_ALIAS_PASSWORD": "@EXPO_ANDROID_KEYSTORE_ALIAS_PASSWORD"
      },
      "supportsTablet": false,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/icon.png",
        "backgroundImage": "./assets/images/icon.png",
        "monochromeImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.erpportaal.ERP_Portaal_TMS",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/d0a43802-1278-4e75-b889-97cd3ef9eae1"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "2.1.20"
          },
           "ios": {
            "useFrameworks": "static",
            "deploymentTarget": "15.1"
          }
        }
      ],
      "expo-audio",
      "expo-video"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d0a43802-1278-4e75-b889-97cd3ef9eae1"
      }
    },
    "owner": "erpportaal",
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
